
@{
	ViewBag.Title = "Search Previous Orders";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>
	<link rel="stylesheet" type="text/css" href="~/Content/search-bar.css">

</head>

<body>

		<div id="page-wrapper">

			<div class="container-fluid">

				<!-- Page Heading -->
				<div id="page-content-wrapper">
					<div class="container-fluid">
						<div class="row">
							<div class="col-lg-12" style="margin-bottom:100px">
								<div class="col-md-12" style="padding-top: 20px">
									<div id="monitoring">
										<h3><b>Search Previous Orders</b></h3>
										<hr>
										<div class="container-fluid">
											<br><br><br><br>
											<!-- Page Heading -->
											<div class="container">
												<div class="row">
													<div class="col-md-8">
														<div class="input-group" id="adv-search">
															<input type="text" class="form-control" placeholder="Search for Transaction # or Name of User" />
															<div class="input-group-btn">
																<div class="btn-group" role="group">
																	<button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
																</div>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										<!-- /.row -->
										<br><br><br><br><br>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /.container-fluid -->

	<!-- jQuery -->
	<script src="~/js/jquery.js"></script>

	<script type="text/javascript">
		jQuery(function ($) {
			$(document).ready(function () {
				$('.status').hide();
				$('#processing').show();
				$('#status').change(function () {
					$('.status').hide();
					$('#' + $(this).val()).show();
				})
			});
		});

	</script>
	<!-- Bootstrap Core JavaScript -->
	<script src="~/js/bootstrap.min.js"></script>
</body>

	
