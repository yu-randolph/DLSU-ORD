
@{
	ViewBag.Title = "Update Operational Dates";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>

	<div id="page-wrapper">

		<div class="container-fluid">

			<!-- Page Heading -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12" style="margin-bottom:100px">
							<div class="col-md-12" style="padding-top: 20px">
								<div id="monitoring">
									<h3><b>Operational Dates</b></h3>
									<hr>
									<br><br><br>
									<label class="col-sm-4" for="textinput"></label>
									<div class="col-sm-4">
										<input class="form-control" name="unavailabledates" type="date">
										<label id="unavailable" class="label-error"></label>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- /.row -->

	</div>
	<!-- /.container-fluid -->

	<!-- jQuery -->
	<script src="~/js/jquery.js"></script>

	<script type="text/javascript">
		jQuery(function ($) {
			$(document).ready(function () {
				$('.status').hide();
				$('#processing').show();
				$('#status').change(function () {
					$('.status').hide();
					$('#' + $(this).val()).show();
				})
			});
		});

	</script>
	<!-- Bootstrap Core JavaScript -->
	<script src="~/js/bootstrap.min.js"></script>


</body>