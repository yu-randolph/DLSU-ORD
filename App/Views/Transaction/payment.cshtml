
@{
	ViewBag.Title = "Payment";
	Layout = "~/Views/Shared/_TransactionLayout.cshtml";
}

@section scripts {
	<script type="text/javascript">
		function validateForm() {

			var lastName = document.forms["registerForm"]["lastName"].value;
			var firstName = document.forms["registerForm"]["firstName"].value;
			var middleName = document.forms["registerForm"]["middleName"].value;

			var isValid = true;

			if (lastName == "") {
				document.getElementById('lastNameError').innerHTML = "Please Enter your Last Name";
				isValid = false;
			}
			if (firstName == "") {
				document.getElementById('firstNameError').innerHTML = "Please Enter your First Name";
				isValid = false;
			}
			if (middleName == "") {
				document.getElementById('middleNameError').innerHTML = "Please Enter your Midddle Name";
				isValid = false;
			}
			if(!document.getElementById('currecyPHP').checked && !document.getElementById('currencyUSD').checked){
			document.getElementById('currencyError').innerHTML = "Please choose a currency";
				isValid = false;
			}
			if(!document.getElementById('bdo').checked && !document.getElementById('paynamics').checked){
			document.getElementById('providerError').innerHTML = "Please choose a provider";
				isValid = false;
			}


			return isValid;
		}
	</script>
}

@section viewCart{
	<ul class="dropdown-menu" style="list-style: none; width: 600px;">
		<table class="table table-hover" id="cartTable">
			<thead>
				<tr>
					<th>Product</th>
					<th>Quantity</th>
					<th class="text-center">Price</th>
					<th>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
				</tr>
			</thead>

		</table>
	</ul>
}
@section btnStep{
	<!--btnStep-->
	<div class="row btnStep" style="margin-top: 7px;">
		<div class="col-xs-9 stepHeader">
			<ul class="nav nav-pills nav-justified thumbnail" style="width: 810px;">
				<li class="stepBtn">
					<a href="order">
						<h4 class="list-group-item-heading stephead">Step 1</h4>
						<p class="list-group-item-text">Order Documents</p>
					</a>
				</li>
				<li class="stepBtn">
					<a href="cart">
						<h4 class="list-group-item-heading stephead">Step 2</h4>
						<p class="list-group-item-text">Edit Cart</p>
					</a>
				</li>
				<li class="stepBtn">
					<a href="info">
						<h4 class="list-group-item-heading stephead">Step 3</h4>
						<p class="list-group-item-text">Delivery Info</p>
					</a>
				</li>
				<li class="stepBtn">
					<a href="success">
						<h4 class="list-group-item-heading stephead">Step 4</h4>
						<p class="list-group-item-text">Checkout</p>
					</a>
				</li>
